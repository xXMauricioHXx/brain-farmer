{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./",
    "types": ["jest"],
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/modules": ["src/modules/*"],
      "@/crops/*": ["src/modules/crops/*"],
      "@/farms/*": ["src/modules/farms/*"],
      "@/rural-producers/*": ["src/modules/rural-producers/*"],
      "@/harvests/*": ["src/modules/harvests/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "test"]
}
